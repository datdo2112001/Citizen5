<h1> Edit </h1>

<div class="w3-container">
  <%= form_for(@citizen, remote: true) do |f| %>
    <%= f.label :CMND %><br>
    <%= f.text_field :cmnd %><br>
    <%= f.label :Name %><br>
    <%= f.text_field :name %><br>
    <%= f.label :BirthDay %><br>
    <%= f.date_field :birthday, as: :date, value: f.object.try(:strftime,"%m/%d/%Y") %><br>
    <%= f.label :Sex %><br>
    <%= f.text_field :sex %><br>
    <%= f.label :Hometown %><br>
    <%= f.text_field :hometown %><br>
    <%= f.label :PAddress %><br>
    <%= f.text_field :paddress %><br>
    <%= f.label :TrAddress%><br>
    <%= f.text_field :traddress %><br>
    <%= f.label :Religion %><br>
    <%= f.text_field :religion %><br>
    <%= f.label :Edulevel %><br>
    <%= f.text_field :edulevel %><br>
    <%= f.label :Job %><br>
    <%= f.text_field :job %><br>
    <%= f.label :Code %><br>
    <%= f.number_field :code, min: 01010101, max: 63999999, step: 1 %><br>
    <%= f.submit%>
  <% end %>
</div>